{
  "name": "gamify-platform",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "build:widget": "vite build --config widget/widget.build.ts",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "postinstall": "nuxt prepare",
    "eslint:run": "eslint .",
    "stylelint:run": "stylelint \"**/*.{css,scss,sass,html,vue}\"",
    "prettier:run": "prettier .",
    "lint:eslint": "yarn eslint:run",
    "lint:style": "yarn stylelint:run",
    "lint:prettier": "yarn prettier:run --check",
    "lint": "yarn lint:eslint && yarn lint:style && yarn lint:prettier",
    "lintfix:eslint": "yarn eslint:run --fix",
    "lintfix:style": "yarn stylelint:run --fix",
    "lintfix:prettier": "yarn prettier:run --write",
    "lintfix": "yarn lintfix:eslint && yarn lintfix:style && yarn lintfix:prettier"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.72",
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/icon": "^2.1.0",
    "@nuxt/image": "^2.0.0",
    "@nuxtjs/stylelint-module": "5.2.1",
    "@nuxtjs/svg-sprite": "^1.0.2",
    "@pinia/nuxt": "^0.11.2",
    "@vueuse/core": "^14.0.0",
    "@vueuse/nuxt": "^14.0.0",
    "eslint": "^9.38.0",
    "mitt": "^3.0.1",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.3",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vue-tsc": "^3.1.1"
  }
}
